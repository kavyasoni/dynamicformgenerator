<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootViewLinearLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/labelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>

    <com.greenfrvr.hashtagview.HashtagView
        android:id="@+id/tags"
        style="@style/HashtagView"
        app:rowGravity="center"
        app:rowMode="stretch"
        app:selectionMode="true"
        app:tagBackground="@drawable/tag_item_bg"
        app:tagForeground="@drawable/tag_item_foreground"
        app:tagPaddingBottom="8dp"
        app:tagPaddingLeft="6dp"
        app:tagPaddingRight="6dp"
        app:tagPaddingTop="8dp"/>

</LinearLayout>